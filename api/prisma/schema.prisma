generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  authId     String?    @unique
  customerId String?    @unique
  email      String     @unique
  name       String?
  Donation   Donation[]
}

model Donation {
  id            Int      @id @default(autoincrement())
  amount        Int
  donationTime  DateTime @default(now())
  transactionId String
  userId        Int
  projectId     Int
  recipient     Project  @relation(fields: [projectId], references: [id])
  donor         User     @relation(fields: [userId], references: [id])
}

model Project {
  id                    Int        @id @default(autoincrement())
  name                  String
  ownerEmail            String
  logo                  String
  shortDescription      String
  longDescription       String
  coverImage            String
  stripeId              String
  videoLink             String
  websiteLink           String
  donations             Donation[]
  goalAmount            Int
  currentMatchingAmount Int        @default(0)
  contributorCount      Int        @default(0)
  contributionsTotal    Int        @default(0)
}

model FundingRound {
  id                 Int      @id @default(autoincrement())
  matchingAmountPool Int
  endDate            DateTime
}
